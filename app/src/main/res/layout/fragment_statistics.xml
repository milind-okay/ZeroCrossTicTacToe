<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="layout.Statistics">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/statistics_hader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Statistics"
        android:textSize="40dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_margin="@dimen/activity_horizontal_margin"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/statistics_hader"

        >
        <RelativeLayout
            android:id="@+id/level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/scoreboard_top"
            android:background="#000000"
            >

            <TextView
                android:layout_marginLeft="@dimen/scoreboard_text_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="@dimen/scoreboard_text"
                android:textColor="#FFFFFF"

                />
            <TextView
                android:id="@+id/level_score"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/scoreboard_text"
                android:textColor="#FFFFFF"
                android:text="Game wins"
                android:paddingRight="@dimen/activity_horizontal_margin"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/level1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_margin="@dimen/scoreboard_top"
            android:layout_below="@+id/level"
            android:background="#Fe602b"
            >
            <RelativeLayout
                android:id="@+id/level0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_margin="@dimen/scoreboard_top"

                android:background="#def0fb"
                >
                <TextView
                    android:id="@+id/pair11name"
                    android:layout_marginLeft="@dimen/scoreboard_text_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="@dimen/scoreboard_text"
                    android:textColor="@color/scoreboard_text"

                    />
                <TextView
                    android:id="@+id/pair11score"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/scoreboard_text"
                    android:textColor="@color/scoreboard"
                    android:layout_marginRight="@dimen/scoreboard_text_right"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/level_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/scoreboard_top"
                android:layout_below="@+id/level0"
                android:background="@color/scoreboard_even"
                >
                <TextView
                    android:id="@+id/pair12name"
                    android:layout_marginLeft="@dimen/scoreboard_text_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/scoreboard_text"
                    android:textColor="@color/scoreboard_text"

                    />
                <TextView
                    android:id="@+id/pair12score"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/scoreboard_text"
                    android:textColor="@color/scoreboard"

                    android:layout_marginRight="@dimen/scoreboard_text_right"
                    />
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
